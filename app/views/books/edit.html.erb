<h1>Editing Book</h1>
 <% if @book.errors.any? %>
    <%= @book.errors.count %>errors 
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<%= form_with model: @book do |book| %>

  <h4>Title</h4>
  <%= book.text_field :title %>
  
  <h4>Body</h4>
  <%= book.text_area :body %>
  
  <%= book.submit 'Update Book' %>
  
 <% end %>
 
 <span>
     <%= link_to 'Show', book_path(@book) %>
 </span>

<span>
    <%= link_to "Back", "/books/" %>
</span>