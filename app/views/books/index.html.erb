<h1>Books</h1>

<% @books.each do |book| %>

  <p>title</p>
  <span>
     <%= link_to book.title, book_path(book.id) %>
  </span>
  
<% end %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'create box' %>
<% end %>