<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <body>
    <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <a class="show_id"href="show/:id">show</a>
      </td>
      <td>
        <a class="edit:id"href="books/:id/edit">Edit</a>
      </td>
      <td></td>
    </tr>
  </body>
  <% end %>
</table>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'create box' %>
<% end %>