<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <body>
    <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <%= link_to 'Show', book_path(book) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_book_path(book) %>
      </td>
      <td>
        <a class="destroy"href="">Destroy</a>
      </td>
    </tr>
  </body>
  <% end %>
</table>

<h1>New Book</h1>
<%= form_with model: @new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'create box' %>
<% end %>